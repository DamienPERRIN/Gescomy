{% extends ('GescomyBundle::base.html.twig') %}

{% block body %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <div class="container">
        <form action="{{ path('login') }}" method="post">
            <label for="username">Entrez votre identifiant</label>
            <input type="text" id="username" name="_username" value="{{ lastUsername }}" />

            <label for="password">Entrez votre mot de passe</label>
            <input type="password" id="password" name="_password" />

            {#
                If you want to control the URL the user
                is redirected to on success (more details below)
                <input type="hidden" name="_target_path" value="/account" />
            #}
            <label style='float: right;'>
                <a class='materialize-red-text text-lighten-2' href='#!'><b>Mot de passe oubli√© ?</b></a>
            </label>
            <input type="checkbox" id="remember_me" name="_remember_me" checked />
            <label for="remember_me">Remember me</label>
            <button type="submit">login</button>
        </form>
    </div>
    {% if error %}
        <div>{{ error.message }}</div>
    {% endif %}

{% endblock %}